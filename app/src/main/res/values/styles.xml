<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.CheckInterest" parent="Widget.MaterialComponents.TextView">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:maxLines">2</item>
        <item name="android:text">@string/mark_interest</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Button.Later" parent="Widget.MaterialComponents.Button">
        <item name="android:text">@string/later</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/button_normal</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Button.Continue" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">36dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:text">@string/continue_caption</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">36dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

