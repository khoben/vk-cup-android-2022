<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.Dzenonboarding">

    <!--  Header  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/component_margin"
        android:orientation="horizontal">

        <TextView
            style="@style/Text.CheckInterest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/component_margin"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/later_button"
            style="@style/Button.Later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/component_margin"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <!--  Categories  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/category_recyclerview_item" />

    <!--  Continue button  -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/component_margin">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continue_button"
            style="@style/Button.Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>